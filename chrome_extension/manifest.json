{
    "manifest_version": 3,
    "name": "My Task Manager",
    "version": "1.0",
    "description": "An AI task manager extension to automate your daily tasks.",
    "permissions": [
      "activeTab",
      "storage",
      "declarativeNetRequest"  
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon512.png",
        "48": "icons/icon512.png",
        "128": "icons/icon512.png"
      }
    },
    "icons": {
      "16": "icons/icon512.png",
      "48": "icons/icon512.png",
      "128": "icons/icon512.png"
    }
  }